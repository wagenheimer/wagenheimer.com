@page "/blog"
@using WagenheimerDotCom.Models
@using WagenheimerDotCom.Services
@inject IBlogService BlogService
@inject IStringLocalizer<SharedResource> Loc

<PageTitle>Blog | Cezar Wagenheimer</PageTitle>

<section class="py-24 min-h-screen relative z-10">
    <div class="container mx-auto px-6">
        <!-- Header -->
        <div class="text-center mb-16">
            <p class="text-brand-cyan font-mono text-sm tracking-widest mb-4">ARTIGOS & TUTORIAIS</p>
            <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Blog</h1>
            <p class="text-slate-400 max-w-xl mx-auto">
                Insights sobre desenvolvimento, games e tecnologia. Compartilhando experiências e aprendizados.
            </p>
        </div>

        <!-- Search & Filter -->
        <div class="max-w-xl mx-auto mb-12 relative">
            <div class="relative">
                <i data-lucide="search" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-500"></i>
                <input @bind="SearchTerm" @bind:event="oninput" type="text" placeholder="Buscar posts por título, descrição ou tags..." 
                       class="w-full bg-surface border border-white/10 rounded-full px-12 py-3 text-white focus:outline-none focus:border-brand-cyan transition shadow-lg placeholder:text-slate-600" />
                @if (!string.IsNullOrEmpty(SearchTerm))
                {
                    <button @onclick="ClearSearch" class="absolute right-4 top-1/2 -translate-y-1/2 text-slate-500 hover:text-white transition">
                        <i data-lucide="x" class="w-5 h-5"></i>
                    </button>
                }
            </div>
            @if (!string.IsNullOrEmpty(SelectedTag))
            {
                <div class="flex justify-center mt-4">
                    <button @onclick="() => FilterByTag(null)" class="flex items-center gap-2 text-sm text-brand-cyan bg-brand-cyan/10 px-3 py-1 rounded-full hover:bg-brand-cyan/20 transition">
                        Tag: @SelectedTag
                        <i data-lucide="x" class="w-3 h-3"></i>
                    </button>
                </div>
            }
        </div>

        <!-- Posts Grid -->
        @if (FilteredPosts == null)
        {
            <div class="flex justify-center">
                <div class="animate-pulse text-slate-500">Carregando...</div>
            </div>
        }
        else if (!FilteredPosts.Any())
        {
            <div class="text-center py-16">
                <i data-lucide="file-question" class="w-16 h-16 text-slate-600 mx-auto mb-4"></i>
                <p class="text-slate-400">Nenhum post encontrado para "@SearchTerm".</p>
                <button @onclick="ClearSearch" class="text-brand-cyan hover:underline mt-2">Limpar busca</button>
            </div>
        }
        else
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                @foreach (var post in FilteredPosts)
                {
                    <a href="/blog/@post.Slug" class="block group">
                        <article class="blog-card h-full">
                            <!-- Image Area -->
                            <div class="blog-card-image relative overflow-hidden">
                                <i data-lucide="file-text" class="w-16 h-16 text-slate-600 group-hover:text-brand-cyan group-hover:scale-110 transition duration-300"></i>
                                <!-- Date Badge -->
                                <div class="absolute top-4 left-4 bg-black/60 backdrop-blur-sm rounded-lg px-3 py-1">
                                    <span class="text-xs font-mono text-slate-300">@post.Date.ToString("dd MMM yyyy")</span>
                                </div>
                            </div>

                            <!-- Content -->
                            <div class="p-6">
                                <!-- Tags -->
                                @if (post.Tags != null && post.Tags.Any())
                                {
                                    <div class="flex gap-2 flex-wrap mb-3">
                                        @foreach (var tag in post.Tags.Take(3))
                                        {
                                            <span @onclick:preventDefault @onclick="() => FilterByTag(tag)" class="text-[10px] uppercase font-bold text-brand-violet bg-brand-violet/10 px-2 py-1 rounded hover:bg-brand-violet hover:text-white transition cursor-pointer z-10 relative">@tag</span>
                                        }
                                    </div>
                                }

                                <h2 class="text-xl font-bold text-white mb-3 group-hover:text-brand-cyan transition line-clamp-2">
                                    @post.Title
                                </h2>
                                <p class="text-slate-400 text-sm line-clamp-3 mb-4">
                                    @post.Description
                                </p>

                                <div class="flex items-center text-brand-cyan text-sm font-semibold">
                                    Ler mais
                                    <i data-lucide="arrow-right" class="w-4 h-4 ml-2 group-hover:translate-x-1 transition"></i>
                                </div>
                            </div>
                        </article>
                    </a>
                }
            </div>
        }
    </div>
</section>

@using System.Globalization

@code {
    private IEnumerable<BlogPost>? allPosts;
    public string SearchTerm { get; set; } = "";
    public string? SelectedTag { get; set; }

    private IEnumerable<BlogPost>? FilteredPosts => 
        allPosts?
        .Where(p => 
            (string.IsNullOrEmpty(SearchTerm) || 
             p.Title.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) || 
             p.Description.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ||
             (p.Tags != null && p.Tags.Any(t => t.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase)))) &&
            (string.IsNullOrEmpty(SelectedTag) || (p.Tags != null && p.Tags.Contains(SelectedTag)))
        );

    protected override async Task OnInitializedAsync()
    {
        var lang = CultureInfo.CurrentUICulture.Name;
        allPosts = await BlogService.GetPostsAsync(lang);
    }
    
    private void ClearSearch()
    {
        SearchTerm = "";
        SelectedTag = null;
    }

    private void FilterByTag(string? tag)
    {
        SelectedTag = tag;
        SearchTerm = ""; // Optional: Clear text search when clicking a tag
    }
}
