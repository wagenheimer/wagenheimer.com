<section id="contact" class="py-24 bg-surface relative overflow-hidden border-t border-border">
    <div class="container mx-auto px-6 relative z-10">
        <div class="max-w-4xl mx-auto bg-card border border-white/5 rounded-2xl p-8 md:p-12 shadow-2xl">
            <div class="text-center mb-10">
                <h2 class="text-3xl font-bold text-white mb-4">Vamos Criar Algo Incrível?</h2>
                <p class="text-slate-400">Tem um projeto em mente? Entre em contato para discutirmos como posso ajudar.</p>
            </div>

            @if (formSent)
            {
                <div class="bg-green-500/10 border border-green-500/20 rounded-xl p-8 text-center animate-fade-in">
                    <div class="w-16 h-16 bg-green-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i data-lucide="check" class="w-8 h-8 text-green-400"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-white mb-2">Mensagem Enviada!</h3>
                    <p class="text-slate-400 mb-6">Obrigado pelo contato. Retornarei em breve.</p>
                    <button @onclick="ResetForm" class="text-brand-cyan hover:underline font-mono text-sm">Enviar nova mensagem</button>
                </div>
            }
            else
            {
                <EditForm Model="@contactModel" OnValidSubmit="HandleContactSubmit" class="space-y-6">
                    <DataAnnotationsValidator />
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            <label class="text-xs font-mono text-slate-500 uppercase">Nome</label>
                            <InputText @bind-Value="contactModel.Name" class="w-full bg-obsidian border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-brand-violet transition" />
                            <ValidationMessage For="@(() => contactModel.Name)" class="text-red-400 text-xs" />
                        </div>
                        <div class="space-y-2">
                            <label class="text-xs font-mono text-slate-500 uppercase">Email</label>
                            <InputText @bind-Value="contactModel.Email" class="w-full bg-obsidian border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-brand-violet transition" />
                            <ValidationMessage For="@(() => contactModel.Email)" class="text-red-400 text-xs" />
                        </div>
                    </div>
                    <div class="space-y-2">
                        <label class="text-xs font-mono text-slate-500 uppercase">Mensagem</label>
                        <InputTextArea @bind-Value="contactModel.Message" rows="4" class="w-full bg-obsidian border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-brand-violet transition" />
                        <ValidationMessage For="@(() => contactModel.Message)" class="text-red-400 text-xs" />
                    </div>
                    <button type="submit" disabled="@isSubmitting" class="w-full bg-gradient-to-r from-brand-violet to-brand-cyan hover:opacity-90 disabled:opacity-50 disabled:cursor-not-allowed text-white font-bold py-4 rounded-lg transition shadow-lg flex items-center justify-center gap-2">
                        @if (isSubmitting)
                        {
                            <span class="animate-spin h-5 w-5 border-2 border-white border-t-transparent rounded-full"></span>
                            <span>ENVIANDO...</span>
                        }
                        else
                        {
                            <span>ENVIAR MENSAGEM</span>
                        }
                    </button>
                </EditForm>
            }
        </div>
    </div>
</section>

<script src="js/game.js"></script>

@inject IContactService ContactService

@code {
    private IEnumerable<BlogPost>? latestPosts;
    private IEnumerable<WagenheimerDotCom.Models.GameProject>? FeaturedGames;

    private ContactRequest contactModel = new();
    private bool isSubmitting = false;
    private bool formSent = false;

    protected override async Task OnInitializedAsync()
    {
        var allPosts = await BlogService.GetPostsAsync();
        latestPosts = allPosts.Take(3);
        
        var allGames = await GameService.GetGamesAsync();
        FeaturedGames = allGames.Where(g => g.IsFeatured);
    }
    
    private async Task HandleContactSubmit()
    {
        isSubmitting = true;
        await Task.Delay(500); // UI feel
        await ContactService.SendMessageAsync(contactModel);
        isSubmitting = false;
        formSent = true;
    }

    private void ResetForm()
    {
        contactModel = new();
        formSent = false;
    }
}
