        </div>
        <p class="text-center text-slate-400 mb-12 max-w-2xl mx-auto">
            Artigos sobre desenvolvimento, games e tecnologia.
        </p>

        @if (latestPosts != null && latestPosts.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                @foreach (var post in latestPosts)
                {
                    <article class="blog-card group">
                        <div class="blog-card-image">
                            <i data-lucide="file-text" class="w-12 h-12 text-slate-600 group-hover:text-brand-cyan transition"></i>
                        </div>
                        <div class="p-6">
                            <div class="flex items-center gap-2 mb-3">
                                <span class="text-xs text-slate-500 font-mono">@post.Date.ToString("dd MMM yyyy")</span>
                                @if (post.Tags != null && post.Tags.Any())
                                {
                                    <span class="text-xs bg-brand-violet/20 text-brand-violet px-2 py-0.5 rounded">@post.Tags.First()</span>
                                }
                            </div>
                            <h3 class="text-lg font-bold text-white mb-2 group-hover:text-brand-cyan transition">
                                <a href="/blog/@post.Slug">@post.Title</a>
                            </h3>
                            <p class="text-slate-400 text-sm line-clamp-2">@post.Description</p>
                        </div>
                    </article>
                }
            </div>
        }
        else
        {
            <div class="text-center text-slate-500">
                <p>Nenhum post disponível ainda. Volte em breve!</p>
            </div>
        }

        <div class="text-center mt-10">
