@page "/admin/comments"
@using WagenheimerDotCom.Models
@using WagenheimerDotCom.Services
@inject ICommentService CommentService
@layout WagenheimerDotCom.Components.Layout.AdminLayout
@attribute [Authorize]

<PageTitle>Admin - Comentários</PageTitle>

<div class="p-8">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold text-white flex items-center gap-3">
            <i data-lucide="message-square" class="w-8 h-8 text-brand-purple"></i>
            Moderação de Comentários
        </h1>
    </div>

    @if (pendingComments == null)
    {
        <div class="text-slate-400 animate-pulse">Carregando...</div>
    }
    else if (!pendingComments.Any())
    {
        <div class="bg-surface rounded-xl p-12 text-center border border-white/10">
            <i data-lucide="check-circle" class="w-16 h-16 text-green-500 mx-auto mb-4"></i>
            <h3 class="text-xl font-bold text-white mb-2">Tudo limpo!</h3>
            <p class="text-slate-400">Não há comentários pendentes de aprovação.</p>
        </div>
    }
    else
    {
        <div class="bg-surface border border-white/10 rounded-xl overflow-hidden">
            <table class="w-full text-left">
                <thead class="bg-black/20 text-slate-400 uppercase text-xs font-mono">
                    <tr>
                        <th class="p-4">Data</th>
                        <th class="p-4">Autor</th>
                        <th class="p-4">Post</th>
                        <th class="p-4">Conteúdo</th>
                        <th class="p-4 text-right">Ações</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-white/5">
                    @foreach (var comment in pendingComments)
                    {
                        <tr class="hover:bg-white/5 transition">
                            <td class="p-4 text-slate-400 text-sm whitespace-nowrap">
                                @comment.Date.ToString("dd/MM/yyyy HH:mm")
                            </td>
                            <td class="p-4 text-white font-bold">
                                @comment.Author
                                <div class="text-xs text-slate-500 font-normal">@comment.Email</div>
                            </td>
                            <td class="p-4 text-brand-cyan text-sm max-w-xs truncate">
                                @comment.PostSlug
                            </td>
                            <td class="p-4 text-slate-300 text-sm max-w-md">
                                @comment.Content
                            </td>
                            <td class="p-4 text-right">
                                <div class="flex justify-end gap-2">
                                    <button @onclick="() => ApproveComment(comment.Id)" class="bg-green-500/20 text-green-400 p-2 rounded-lg hover:bg-green-500 hover:text-white transition" title="Aprovar">
                                        <i data-lucide="check" class="w-4 h-4"></i>
                                    </button>
                                    <button @onclick="() => DeleteComment(comment.Id)" class="bg-red-500/20 text-red-400 p-2 rounded-lg hover:bg-red-500 hover:text-white transition" title="Excluir">
                                        <i data-lucide="trash-2" class="w-4 h-4"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private IEnumerable<Comment>? pendingComments;

    protected override async Task OnInitializedAsync()
    {
        await LoadComments();
    }
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("lucide.createIcons");
        }
    }

    private async Task LoadComments()
    {
        pendingComments = await CommentService.GetPendingCommentsAsync();
    }

    private async Task ApproveComment(string id)
    {
        await CommentService.ApproveCommentAsync(id);
        await LoadComments();
    }

    private async Task DeleteComment(string id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Tem certeza que deseja excluir este comentário?"))
        {
            await CommentService.DeleteCommentAsync(id);
            await LoadComments();
        }
    }

    [Inject] IJSRuntime JSRuntime { get; set; } = default!;
}
